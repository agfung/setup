[user]
	name = Andrew Fung

[push]
	default = simple

[core]
	pager = less -FX -x2
	excludesfile = ~/.gitignore

[diff]
  compactionHeuristic = true
  tool = vimdiff
  guitool = bc3

[difftool]
  prompt = false

[merge]
  keepBackup = false
  tool = bc3
  renameLimit = 999999

[difftool "bc3"]
  trustExitCode = true

[mergetool "bc3"]
  trustExitCode = true

[alias]
	co = checkout
	ci = commit
	cp = cherry-pick
	br = branch
	st = status
	unstage = reset HEAD --
	lo = log --oneline --decorate=auto
